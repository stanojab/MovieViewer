<Window x:Class="MovieViewer.AddMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieViewer"
        mc:Ignorable="d"
        Title="AddMovieWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" VerticalAlignment="Top" >

                
                <TextBlock Text="Title:" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="NameBox" Padding="5"/>

                
                <TextBlock Text="Director:" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="DirectorBox" Padding="5"/>

               
                <TextBlock Text="Year:" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="YearBox" Padding="5"/>

                
                <TextBlock Text="Description:" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="DescriptionBox" AcceptsReturn="True" Height="60" Padding="5"/>

               
                <TextBlock Text="Genres (seperated with comma):" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="GenresBox" Padding="5"/>

                
                <TextBlock Text="Actors (seperated with comma):" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="ActorsBox" Padding="5"/>

                
                <TextBlock Text="Rating (1–10):" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="RatingBox" Padding="5"/>

                
                <TextBlock Text="Image:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                <Border BorderBrush="DarkGray" BorderThickness="1" Background="#FFF9F9F9"
                        Height="150" Margin="0,5" MouseLeftButtonUp="MovieImage_MouseLeftButtonUp"
                        Cursor="Hand" CornerRadius="4">
                    <Grid>
                        <Image x:Name="MovieImage" Stretch="UniformToFill"/>
                        <TextBlock Text="Kliknite za izbiro slike" Foreground="Gray"
                                   FontStyle="Italic" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="12"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
      
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click" Padding="5"/>
            <Button Content="Add" Width="100" Margin="5" Click="Add_Click" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
